<%= form_with model:story, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body, size: '10x50', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :tag_names, "タグ" %>
    <%= f.text_field :tag_names, placeholder:",で区切ってください", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "投稿" , class: 'btn btn-success btn-lg btn-block' %>
  </div>

<% end %>