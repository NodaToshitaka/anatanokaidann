<tr>
  <td>タグ:</td>
  <% if story.tags.present? %>
    <td colspan="3">
      <% story.tags.each do |tag| %>
        <%=link_to tag.tag_name, search_path(word: tag.tag_name, range: "Tag", search: "perfect_match")%>
      <% end %>
    </td>
  <% else %>
    <td colspan="3">タグがありません</td>
  <% end %>
</tr>