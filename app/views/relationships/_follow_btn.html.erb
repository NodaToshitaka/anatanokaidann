<tr>
  <th>いいねした投稿：</th>
  <th>
    <%= link_to favorite_stories_user_path(user) do %>
      <%= user.favorited_stories.count %>
    <% end %>
  </th>
</tr>
<tr>
  <th>フォロー数：</th>
  <th>
    <%= link_to follows_user_path(user) do %>
      <%= user.following_user.count %>
    <% end %>
  </th>
</tr>
<tr>
  <th>フォロワー数：</th>
  <th>
    <%= link_to followers_user_path(user) do%>
        <%= user.follower_user.count %>
    <% end %>
  </th>
</tr>
<tr>
  <th colspan="2">
    <% if user == current_user %>
      <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
    <% else %>
      <% if current_user.following?(user) %>
        <%= link_to 'フォローを外す',user_relationships_path(user), method: :delete, class: "btn btn-info btn-block", remote: true %>
      <% else %>
        <%= link_to 'フォローする',user_relationships_path(user), method: :post, class: "btn btn-success btn-block", remote: true %>
      <% end %>
    <% end %>
  </th>
</tr>